/**
* Resources Section
* @class Resources
* @module publicacion.css
*/
.btn-group
	float left
	position relative
	& + .btn-group, & + .btn-gray
		margin-left 10px
	&.act
		.dropdown-menu
			display block
		.dropdown-toggle
			background #F3F3F3
			box-shadow 0 3px 5px rgba(0, 0, 0, 0.125) inset
.dropdown-toggle
	background #FFF
	border 1px solid #B8B8B8
	border-radius 4px
	box-shadow -1px 2px 2px rgba(0, 0, 0, 0.2) inset
	display block
	height 15px
	padding 4px 28px 4px 16px
	position relative
	input[type="checkbox"]
		margin-top 1px
	.caret
		background url(routImg+"icon-publicacion.png") iconDropDown no-repeat
		height 6px
		left 35px
		position absolute
		top 10px
		width 10px
.dropdown-menu
	display none
	background #F2F2F2;
	border 1px solid #D7D7D7
	box-shadow 1px 1px 2px rgba(153, 153, 153, 0.6)
	left 0
	position absolute
	top 100%
	width 102px
	z-index 8
	li
		border-top 1px solid #D7D7D7
		&:first-child
			border-top none
	a
		color #666
		display block
		padding 6px
		&:hover
			background #E6E6E6
			text-decoration none
.icon-filter
	background url(routImg+"icon-publicacion.png") iconFilter no-repeat
	display block
	height 15px
	width 14px