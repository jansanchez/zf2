/**
* Landing CSS
* @class Landing
* @module landing.css
*/
@font-face
	font_face("helveticaCond")
/**
* Oportunidades
* @class Oportunidades
* @module publicacion.css
*/
.arr-left
	background url(routImg+"icon-set3.png") icoArrLeft no-repeat
	height 138px
	left 0
	position absolute
	top 95px
	width 85px
	z-index 2
.arr-right
	background url(routImg+"icon-set3.png") icoArrRight no-repeat
	height 140px
	position absolute
	right 0
	top 130px
	width 76px
	z-index 2
.img-estate-agent
	background url(routImg+"icon-set3.png") icoEstateAgent no-repeat
	height 222px
	margin 0 auto
	width 216px
.img-building
	background url(routImg+"icon-set3.png") icoBuilding no-repeat
	height 180px
	margin 10px auto 0
	width 246px
.box-oportunity
	margin 20px 0 0 40px
	position relative
	width 410px
	float left
	h2
		color #333
		font 700 31px/32px family4
		margin 25px 0
		text-align center
	p
		color #333
		font-size 14px
		line-height 18px
		margin-bottom 20px
	&.only
		display block
		margin 30px 0 0 210px