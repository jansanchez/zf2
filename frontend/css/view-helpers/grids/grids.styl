/**
* Grids Section (soporta 6 filas)
* @class Grids
* @module base.css
*/
[class*="grids-"]
	float left
	margin-left 20px
	&:first-child
		margin 0
	.urb-title
		font-size 20px
.grids
	*zoom 1
	&:before,&:after
		display table
		content ""
		line-height 0
	&:after
		clear both
	.grids-4
		margin-top 20px
		&:nth-child(3n+1)
			margin-left 0
		&:nth-child(-n+3)
			margin-top 0
.grids-2
	width 140px
.grids-3
	width 220px
.grids-4
	width 300px
	&.mt12
		margin-top 12px
.grids-5
	width 380px
.grids-6
	width 460px
.grids-7
	width 540px
.grids-8
	width 620px
.grids-9
	width 700px
.grids-9
	.grids-3:nth-child(3n+1)
		margin 0
/**
@module resources.css
@submodule Fixes: En esta seccion van los fix relacionados a las grillas
*/
.g3-pb30
	.grids-3
		padding-bottom 30px