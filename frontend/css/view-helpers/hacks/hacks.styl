/**
* Hacks Section
* @class Hacks
* @module base.css
*/
@-moz-document url-prefix()
	table
		border-collapse separate

.lt-ie9
	.btn-urb
		filter unquote("progid:DXImageTransform.Microsoft.gradient( startColorstr='#ff9b2e', endColorstr='#eb7617',GradientType=0 )")
		*zoom 1
		&:hover
			filter unquote("progid:DXImageTransform.Microsoft.gradient( startColorstr='#eb7617', endColorstr='#ff9b2e',GradientType=0 )")
	#ctn-smenu
		filter unquote("progid:DXImageTransform.Microsoft.gradient( startColorstr='#fafbfe', endColorstr='#e2e3e5',GradientType=0 )")
		*zoom 1
	.baner-side
		filter unquote("progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffffff', endColorstr='#f1f1f1',GradientType=0 )")
		&.yellow
			filter unquote("progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffffff', endColorstr='#f0eddd',GradientType=0 )")
	.bg-price
		filter unquote("progid:DXImageTransform.Microsoft.gradient( startColorstr='#f04d51', endColorstr='#ab1014',GradientType=0 )")
	.bxpl-btn
		filter unquote("progid:DXImageTransform.Microsoft.gradient( startColorstr='#fb960a', endColorstr='#ee7d21',GradientType=0 )")
		*zoom 1
		&:hover
			filter unquote("progid:DXImageTransform.Microsoft.gradient( startColorstr='#ee7d21', endColorstr='#fb960a',GradientType=0 )")
	.search-menu
		a
			border-bottom 1px solid #e1e0e0
			border-left 1px solid #e1e0e0
			&:first-child
				border-top 1px solid #e1e0e0
			&.act
				border 0
	.property-expired
		height 100%
	#property_bar
		filter unquote("progid:DXImageTransform.Microsoft.gradient( startColorstr='#fafbfe', endColorstr='#e2e3e5',GradientType=0 )")
		*zoom 1
	.profile-type
		a
			filter unquote("progid:DXImageTransform.Microsoft.gradient( startColorstr='#ff9b2e', endColorstr='#eb7617',GradientType=0 )")
			*zoom 1
			&:hover, &.act
				filter unquote("progid:DXImageTransform.Microsoft.gradient( startColorstr='#eb7617', endColorstr='#ff9b2e',GradientType=0 )")
	.advi-content
		span
			top 10px
			*top 10px
.lt-ie10
	.advi-content
		span
			top 10px
